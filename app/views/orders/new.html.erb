<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-7'></div>
    <div class='col-md-11 offset-md-1'>
      <%= form_with model: @order, url: confirm_orders_path(@order), method: :post, local: true do |f| %>
      <div class="payment"> 
        <h3>支払い方法</h3>
          <%= f.radio_button :payment, :クレジットカード , checked: true%>
          <%= f.label :payment, "クレジットカード",value: :クレジットカード  %>
          <%= f.radio_button :payment, :銀行振込 %>
          <%= f.label :payment, "銀行振込", value: :銀行振込 %>
      </div>
      
      <div class="address">
      <h3>お届け先</h3>
      <div class="origin-address">
        <%= f.radio_button :address, 0 , checked: true %>
        <%= f.label :address, "ご自身の住所", value: 0 %>
        〒<%= current_customer.postcode %><%= current_customer.address %><br>
        <%= current_customer.last_name %><%= current_customer.first_name %>
      </div>


      
        <%= f.submit "確認画面に進む", class: "btn btn-sm btn-success" %>
      </div>  
      <% end %>
    </div>
  </div>
</div>
